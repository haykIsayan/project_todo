<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".view.MainActivity">

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_todo_graph" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_task_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:rippleColor="@android:color/darker_gray"
                android:tint="@android:color/white"
                android:backgroundTint="@android:color/black"
                app:layout_anchor="@id/bab_main_menu_activity_main"
                app:fabSize="normal"
                app:backgroundTint="@android:color/white"
                android:src="@drawable/ic_action_add_todo"/>

    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bab_main_menu_activity_main"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            app:fabCradleRoundedCornerRadius="25dp"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            app:navigationIcon="@drawable/ic_action_lists"
            app:menu="@menu/menu_main_toolbar"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>